<!--    <param-value>/WEB-INF/applicationContext.xml</param-value>-->
<!--  </context-param>-->

<!--  <listener>-->
<!--    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>-->
<!--  </listener>-->
  
  <listener>
    <listener-class>org.springMVC.MyListener</listener-class>
  </listener>



  <!-- This is to change the default opening file from index.jsp to something else -->
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/home.jsp</welcome-file>
  </welcome-file-list>


</web-app>
